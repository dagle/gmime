[library]
version = "@version@"
browse_url = "https://github.com/jstedfast/gmime"
repository_url = "https://github.com/jstedfast/gmime"
website_url = "https://github.com/jstedfast/gmime"
authors = "Jeffrey Stedfast"
license = "LGPL-2.1-only"
description = "C/C++ MIME creation and parser library"
devhelp = true
search_index = true

dependencies = ["Gio-2.0", "GObject-2.0"]

  [dependencies."Gio-2.0"]
  name = "Gio"
  description = "GObject Interfaces and Objects, Networking, IPC, and I/O"
  docs_url = "https://docs.gtk.org/gio/"

  [dependencies."GObject-2.0"]
  name = "GObject"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/gobject/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://github.com/jstedfast/gmime/blob/master/"
file_format = "{filename}#L{line}"

[extra]
# The same order will be used when generating the index
content_files = [
  "overview.md",
  'tutorial.md',
  'streams.md',
  'filters.md',
  'data-wrappers.md',
  'changelog.md',
]
